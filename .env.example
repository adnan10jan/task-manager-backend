# =============================================
# Task Manager - Environment Variables Template
# =============================================
# Copy this file to .env and replace values
# DO NOT commit .env to version control!

# Database Configuration
DB_URL=jdbc:postgresql://localhost:5432/taskapp
DB_USERNAME=YOUR_DATABASE_USERNAME_HERE
DB_PASSWORD=YOUR_DATABASE_PASSWORD_HERE

# JWT Configuration (minimum 32 characters)
JWT_SECRET=YOUR_SECURE_JWT_SECRET_KEY_MINIMUM_32_CHARACTERS_LONG

# Spring Profile
SPRING_PROFILES_ACTIVE=dev

# Docker PostgreSQL (if using docker-compose)
POSTGRES_DB=taskapp
POSTGRES_USER=postgres
POSTGRES_PASSWORD=YOUR_POSTGRES_PASSWORD_HERE

# Application Port
SERVER_PORT=8080
